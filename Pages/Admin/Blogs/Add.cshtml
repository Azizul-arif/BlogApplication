@page
@model Bloggie.Pages.Admin.Blogs.AddModel
@{
}
<div class="mt-5">
    <div class="container">
        <h1>Add Blog</h1>

    </div>

    <div>
        <form method="post">
            <div class="row mb-3">
                
                <div class="col-6">
                    <label for="heading" class="form-label" >Heading</label>
                    <input type="text" class="form-control" id="heading" asp-for="AddBlogPostRequest.Heading">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <label for="pageTitle" class="form-label" >Page Title</label>
                    <input type="text" class="form-control" id="pageTitle" asp-for="AddBlogPostRequest.PageTitle">
                </div>
                <div class="col-6">
                    <label for="content" class="form-label" >Content</label>
                    <textarea class="form-control" id="content" rows="3" asp-for="AddBlogPostRequest.Content"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <label for="shortDescription" class="form-label" >Short Description</label>
                    <input type="text" class="form-control" id="shortDescription" asp-for="AddBlogPostRequest.ShortDescription">
                </div>
                <div class="col-6">
                    <label for="featureImageUrl" class="form-label" >Feature Image URL</label>
                    <input type="text" class="form-control" id="featureImageUrl" asp-for="AddBlogPostRequest.FeatureImageUrl">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <label for="urlHandle" class="form-label" >URL Handle</label>
                    <input type="text" class="form-control" id="urlHandle" asp-for="AddBlogPostRequest.UrlHandle">
                </div>
                <div class="col-6">
                    <label for="publishedDate" class="form-label" >Published Date</label>
                    <input type="date" class="form-control" id="publishedDate" asp-for="AddBlogPostRequest.PublishedDate">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <label for="author" class="form-label" >Author</label>
                    <input type="text" class="form-control" id="author" asp-for="AddBlogPostRequest.Author">
                </div>
                <div class="col-6">
                    <label for="visible" class="form-label">Visible</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="visible" asp-for="AddBlogPostRequest.Visible">
                        <label class="form-check-label" for="visible">Check if visible</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</div>


